# Instalando o Flask

apt-get install python-setuptools
easy_install Flask

# Instalando o ffmpeg e o youtube-dl

wget https://github.com/rg3/youtube-dl/raw/2012.01.08b/youtube-dl
apt-get install ffmpeg
apt-get install lame
apt-get install ffmpeg libavcodec-extra-52

# Testando o youtube-dl

python youtube-dl.py http://www.youtube.com/watch?v=VIDEO_ID -q -o /dev/stdout | ffmpeg -i pipe: -acodec libmp3lame -vn -ab 128000 -ar 44100 output.mp3

# Instalando o icecast2 e o ices

apt-get install icecast2
apt-get install libshout3-dev
apt-get install libxml2-dev
apt-get install libmp3lame-dev
apt-get install python-dev
wget http://downloads.us.xiph.org/releases/ices/ices-0.4.tar.gz
tar -xvf ices-0.4.tar.gz
./configure
make
make install

# Editando a configuração do ices

vim /usr/local/etc/ices.conf.dist
